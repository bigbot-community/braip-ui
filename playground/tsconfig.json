{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@braiphub/ui": ["../packages/braip-ui/src"],
      "@braiphub/ui/*": ["../packages/braip-ui/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/auto-imports.d.ts"],
  "exclude": ["node_modules"]
}
